{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "headers": [
    {
      "source": "/index.html",
      "headers": [{ "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }]
    }
  ],
  "rewrites": [
    { "source": "/api/kaiten/:path*", "destination": "/api/kaiten" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
